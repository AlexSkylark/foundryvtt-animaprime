<script>
    $(document).ready(() => {

        const currentHealth = {{health.value}}

        let percent = ({{health.value}} / {{health.max}} * 100)
        let frameWidthValue = $(".health-bar-frame").width() - 21
        let barValue = frameWidthValue * percent / 100

        if (currentHealth == 0) {
            $(".health-bar").hide();
        } else {
            $(".damage-curtain").hide()
            $(".health-bar").show();
            $(".health-bar").css("width", barValue);
        }

        if (percent <= 50) {
            $(".damage-curtain").show()
            $(".damage-curtain").css("background-color", "#ffae003b");
            $(".health-bar").css("background-color", "#c99f04");
        }
            
        if (percent <= 25) {
            $(".damage-curtain").show()
            $(".damage-curtain").css("background-color", "#b1000066");
            $(".health-bar").css("background-color", "#a80014");
        }
    });
</script>