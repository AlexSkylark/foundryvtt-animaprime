<div class="roll-maneuver roll maneuver" data-type="maneuver">
    <div class="roll item" data-item-id="{{_id}}">        
        <div class="roll-header flexrow">            
            <img class="roll-img" src="{{flavor.entityData.img}}" title="{{flavor.entityData.name}}" />
            <div class="flexcol">
                <h4 class="header-title">Maneuver {{#if flavor.isReroll}}re{{/if}}roll{{#unless flavor.targetData.[0].additionalData.isRegular}} - {{flavor.targetData.[0].additionalData.maneuverStyle}}{{/unless}} {{#if flavor.additionalData.hasSupportDie}}(with support){{/if}}:</h4>
                <h4 class="header-name">{{flavor.entityData.name}}</h4>
            </div>
        </div>        
        <div class="flexcol">
            <div class="target-section">
                <ol class="rolls">
                    {{#if flavor.targetData.[0].additionalData.isSlowed}}
                    <li class="roll slowed" title="Slowed Condition die"></li>
                    {{/if}}
                    {{#each flavor.targetData.[0].rollResult.dice.0.results}}
                    <li class="roll{{#if this.strike}} success strike-success{{/if}}{{#if this.charge}} success charge-success{{/if}}" title="Maneuver die">{{{this.result}}}</li>
                    {{/each}}
                    {{#if flavor.targetData.[0].additionalData.isReckless}}
                    <li class="roll reckless{{#if flavor.targetData.[0].additionalData.recklessDice.0.strike}} success strike-success{{/if}}{{#if flavor.targetData.[0].additionalData.recklessDice.0.charge}} success charge-success{{/if}}" title="Reckless die">{{{flavor.targetData.[0].additionalData.recklessDice.0.result}}}</li>
                    <li class="roll reckless{{#if flavor.targetData.[0].additionalData.recklessDice.1.strike}} success strike-success{{/if}}{{#if flavor.targetData.[0].additionalData.recklessDice.1.charge}} success charge-success{{/if}}" title="Reckless die">{{{flavor.targetData.[0].additionalData.recklessDice.1.result}}}</li>
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isQuickened}}
                    <li class="roll quickened{{#if flavor.targetData.[0].additionalData.quickenedDie.strike}} success strike-success{{/if}}{{#if flavor.additionalData.quickenedDie.charge}} success charge-success{{/if}}" title="Quickened Condition die">{{{flavor.targetData.[0].additionalData.quickenedDie.result}}}</li>
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isAggressive}}
                    <li title="Aggressive Modifier die" class="roll success strike-success">&nbsp;</li>
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.hasSupportDie}}
                    <li class="roll bonus{{#if flavor.targetData.[0].additionalData.supportDice.0.strike}} success strike-success{{/if}}{{#if flavor.additionalData.supportDice.0.charge}} success charge-success{{/if}}" title="Support die">{{{flavor.targetData.[0].additionalData.supportDice.0.result}}}</li>
                    {{/if}}
                </ol>
                <span class="result-message">
                    {{#if flavor.targetData.[0].resultData.strike}}
                    + {{flavor.targetData.[0].resultData.strike}} strike{{#if (is1 flavor.targetData.[0].resultData.strike)}} die{{else}} dice{{/if}}
                    {{/if}}
                    &nbsp;
                    {{#if flavor.targetData.[0].resultData.charge}}
                    + {{flavor.targetData.[0].resultData.charge}} charge{{#if (is1 flavor.targetData.[0].resultData.charge)}} die{{else}} dice{{/if}}
                    {{/if}}

                    {{#if flavor.targetData.[0].additionalData.hasSupportDie}}
                    <br />(+1 bonus die to roll)
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isAggressive}}
                    <br />(+1 bonus strike die)
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isCunning}}
                    <br />(+1 threat die to enemy)
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isDefensive}}
                    <br />(-1 threat die)
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isHeroic}}
                    <br />(+1 bonus progress die to goal)
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isReckless}}
                    <br />(+2 bonus dice to roll, +1 threat die)
                    {{/if}}
                    {{#if flavor.targetData.[0].additionalData.isSupportive}}
                    <br />(+1 bonus strike die to ally)
                    {{/if}}
                </span>               
            </div>                   
        </div>
        {{#if flavor.enableReroll}}
        <div class="button-reroll-container flexrow">
            <div class="button-roll reroll">Reroll <i class="fas fa-redo"></i></div>
            <div class="button-roll commit">Commit <i class="fas fa-check"></i></div>
        </div>
        {{/if}}       
    </div>    
</div>