<div class="roll-strike roll strike" data-type="strike">
    <div class="roll item" data-item-id="{{id}}">        
        <div class="roll-header">
            <div class="flexrow">
                <img class="roll-img" src="{{flavor.entityData.img}}" title="{{flavor.entityData.name}}" />
                <div class="flexcol">
                    <h4 class="header-title">{{flavor.entityData.type}} roll:</h4>
                    <h4 class="header-name">{{flavor.entityData.name}}</h4>
                </div>
            </div>
            <div class="item-description">
                <p>{{flavor.entityData.system.description}}</p>
            </div>
        </div>
        <div class="flexcol">
            {{#each flavor.targetData}}
            <div class="flexrow target-section">
                <ol class="rolls">
                    {{#each this.additionalData.weakenedDice}}
                    <li class="roll weaken">&nbsp;</li>
                    {{/each}}

                    {{#each this.additionalData.resistanceDice}}
                    <li class="roll resistance">&nbsp;</li>
                    {{/each}}

                    {{#each this.additionalData.abilityDice}}
                    <li title="Ability die" class="roll{{#if (isSuccess this.result)}} success{{/if}}">{{{this.result}}}</li>
                    {{/each}}

                    {{#each this.additionalData.strikeDice}}
                    <li title="Strike die" class="roll strike{{#if (isSuccess this.result)}} success{{/if}}">{{{this.result}}}</li>
                    {{/each}}

                    {{#each this.additionalData.actionDice}}
                    <li title="Action die"class="roll action{{#if (isSuccess this.result)}} success{{/if}}">{{{this.result}}}</li>
                    {{/each}}

                    {{#each this.additionalData.variableDice}}
                    <li title="Threat / Progress die"class="roll threat{{#if (isSuccess this.result)}} success{{/if}}">{{{this.result}}}</li>
                    {{/each}}

                    {{#each this.additionalData.bonusDice}}
                    <li title="Bonus die"class="roll bonus{{#if (isSuccess this.result)}} success{{/if}}">{{{this.result}}}</li>
                    {{/each}}

                    {{#each this.additionalData.empoweredDice}}
                    <li title="Empowered Condition die"class="roll condition{{#if (isSuccess this.result)}} success{{/if}}">{{{this.result}}}</li>
                    {{/each}}

                    {{#each this.additionalData.successDice}}
                    <li title="Ability Modifier die" class="roll successdice success">&nbsp;</li>
                    {{/each}}
                </ol>                
                <span class="result-message{{#if this.resultData.hit}} success{{/if}} {{#unless this.resultData.successes}} failure{{/unless}}">
                {{#if this.resultData.hit}}
                MAJOR WOUND! {{this.targetName}} takes a point of damage!
                {{else}}
                    {{#if this.resultData.successes}}
                        Minor wound! {{this.targetName}} gained {{this.resultData.successes}} threat {{#if (is1 flavor.resultData.successes)}}die{{else}}dice{{/if}}.
                    {{else}}
                        Complete miss on {{this.targetName}}!
                    {{/if}}
                {{/if}}
                </span>
            </div>
            {{/each}}                
        </div>
        {{#if flavor.enableReroll}}
        <div class="button-reroll-container flexrow">
            <div class="button-roll reroll">Reroll <i class="fas fa-redo"></i></div>
            <div class="button-roll commit">Commit <i class="fas fa-check"></i></div>
        </div>
        {{/if}}            
    </div>    
</div>